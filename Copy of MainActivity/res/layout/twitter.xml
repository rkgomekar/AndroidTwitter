<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUserName" android:layout_gravity="right|center_vertical" android:padding="10dp"
            android:singleLine="false"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:id="@+id/textViewStatus" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStatus" android:layout_margin="10dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tweet"
            android:id="@+id/buttonUpdateStatus" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/showMyLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show My Location" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/buttonLogout" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
    
    <Button 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="Show Tweets"
        	android:id="@+id/showTweets"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
/
</LinearLayout>